@model HotelReservationApp2.Models.Room

@{
    ViewData["Title"] = "Usuń pokój";
}

<div class="container py-5">
    <h1 class="text-center text-danger mb-4">Czy na pewno chcesz usunąć ten pokój?</h1>
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <img src="@Model.ImageUrl" class="card-img-top" alt="Zdjęcie pokoju" style="height: 300px; object-fit: cover;">
        <div class="card-body">
            <h5 class="card-title">Numer pokoju: @Model.RoomNumber</h5>
            <p><strong>Opis:</strong> @Model.Description</p>
            <p><strong>Cena za noc:</strong> @Model.Price.ToString("C")</p>
            <p><strong>Pojemność:</strong> @Model.Capacity osób</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger">Usuń</button>
                    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>

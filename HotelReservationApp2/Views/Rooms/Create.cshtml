@model HotelReservationApp2.Models.Room

<div class="container py-5">
    <h1 class="text-center mb-4" style="color: #0d6efd;">Dodaj nowy pokój</h1>

    <form asp-action="Create" method="post" class="shadow-lg p-4 rounded" style="max-width: 600px; margin: auto; background-color: #f8f9fa;">
        <div class="mb-3">
            <label for="RoomNumber" class="form-label" style="font-weight: bold;">Numer pokoju</label>
            <input asp-for="RoomNumber" class="form-control" style="border-color: #0d6efd;" />
            <span asp-validation-for="RoomNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Description" class="form-label" style="font-weight: bold;">Opis</label>
            <textarea asp-for="Description" class="form-control" style="border-color: #0d6efd;"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Price" class="form-label" style="font-weight: bold;">Cena</label>
            <input asp-for="Price" class="form-control" style="border-color: #0d6efd;" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Capacity" class="form-label" style="font-weight: bold;">Pojemność</label>
            <input asp-for="Capacity" class="form-control" style="border-color: #0d6efd;" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="ImageUrl" class="form-label" style="font-weight: bold;">Link do zdjęcia (URL)</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="https://adres-zdjecia.com/zdjecie.jpg" style="border-color: #0d6efd;" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success btn-lg" style="background-color: #0d6efd; border-color: #0d6efd;">Zapisz</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Anuluj</a>
        </div>
    </form>
</div>
<style>
    form {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Nagłówki */
    h1 {
        font-family: 'Arial', sans-serif;
        font-weight: bold;
        text-transform: uppercase;
    }

    /* Pola formularza */
    .form-control {
        border-radius: 0.375rem;
        transition: box-shadow 0.3s ease, border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 5px rgba(13, 110, 253, 0.5);
        }

    /* Etykiety */
    label {
        color: #212529;
        font-size: 1.1rem;
    }

    /* Przycisk zapisz */
    .btn-success {
        font-size: 1rem;
        padding: 10px 20px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-success:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    /* Przycisk anuluj */
    .btn-secondary {
        font-size: 1rem;
        padding: 10px 20px;
    }

    /* Walidacja */
    .text-danger {
        font-size: 0.875rem;
    }

</style>

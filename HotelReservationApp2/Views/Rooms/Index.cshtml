@model IEnumerable<HotelReservationApp2.Models.Room>

@{
    ViewData["Title"] = "Lista pokoi";
}

<div class="container py-5">
    <h1 class="text-center mb-4">Lista pokoi</h1>
    <a asp-action="Create" class="btn btn-primary mb-4">Dodaj nowy pokój</a>

    <div class="row">
        @foreach (var room in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@room.ImageUrl" class="card-img-top" alt="Zdjęcie pokoju" style="height: 200px; object-fit: cover;">>
                    <div class="card-body">
                        <h5 class="card-title">Numer pokoju: @room.RoomNumber</h5>
                        <p class="card-text">@room.Description</p>
                        <p class="text-muted">Cena: @room.Price.ToString("C") za noc</p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-warning btn-sm">Edytuj</a>
                            <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-danger btn-sm">Usuń</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - HotelReservationApp2</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">HotelReservationApp</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Rooms" asp-action="Index">Pokoje</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Reservations" asp-action="Index">Rezerwacje</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ReservationForm" asp-action="Create">Rezerwuj pobyt</a>
                    </li>

                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        
                        <li class="nav-item">
                            <form class="nav-link" method="post" asp-area="Identity" asp-page="/Account/Logout">
                                <button class="btn btn-link text-white" type="submit">Wyloguj się</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>
                        </li>
                        @* <li class="nav-item"> *@
                        @*     <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a> *@
                        @* </li> *@
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

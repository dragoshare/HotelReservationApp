@model HotelReservationApp2.Models.Reservation

@{
    ViewData["Title"] = "Edytuj rezerwację";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-primary">Edytuj rezerwację</h1>
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label for="FullName" class="form-label fw-bold">Imię i nazwisko</label>
                    <input asp-for="FullName" class="form-control" style="border-color: #0d6efd;" required />
                </div>
                <div class="form-group mb-3">
                    <label for="Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Email" class="form-control" type="email" style="border-color: #0d6efd;" required />
                </div>
                <div class="form-group mb-3">
                    <label for="NumberOfGuests" class="form-label fw-bold">Liczba gości</label>
                    <input asp-for="NumberOfGuests" class="form-control" type="number" min="1" style="border-color: #0d6efd;" required />
                </div>
                <div class="form-group mb-3">
                    <label for="CheckInDate" class="form-label fw-bold">Data zameldowania</label>
                    <input asp-for="CheckInDate" class="form-control" type="date" style="border-color: #0d6efd;" required />
                </div>
                <div class="form-group mb-3">
                    <label for="CheckOutDate" class="form-label fw-bold">Data wymeldowania</label>
                    <input asp-for="CheckOutDate" class="form-control" type="date" style="border-color: #0d6efd;" required />
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">Zapisz zmiany</button>
                    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model HotelReservationApp2.Models.Reservation

@{
    ViewData["Title"] = "Usuń rezerwację";
}

<div class="container py-5">
    <h1 class="text-center text-danger mb-4">Czy na pewno chcesz usunąć tę rezerwację?</h1>
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h5 class="card-title">Imię i nazwisko: @Model.FullName</h5>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Pokój ID:</strong> @Model.RoomId</p>
            <p><strong>Liczba gości:</strong> @Model.NumberOfGuests</p>
            <p><strong>Data zameldowania:</strong> @Model.CheckInDate.ToString("d")</p>
            <p><strong>Data wymeldowania:</strong> @Model.CheckOutDate.ToString("d")</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger">Usuń</button>
                    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>
@page
@model LoginModel
@{
    ViewData["Title"] = "Zaloguj się";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-primary">Zaloguj się do systemu</h1>

    <div class="card shadow-sm mx-auto" style="max-width: 400px;">
        <div class="card-body">
            <form method="post">
                <div class="form-group mb-3">
                    <label for="Input_Email" class="form-label fw-bold">Adres e-mail</label>
                    <input asp-for="Input.Email" class="form-control" style="border-color: #0d6efd;" placeholder="Wprowadź swój email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Input_Password" class="form-label fw-bold">Hasło</label>
                    <input asp-for="Input.Password" class="form-control" type="password" style="border-color: #0d6efd;" placeholder="Wprowadź swoje hasło" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Zapamiętaj mnie</label>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Zaloguj się</button>
                    <a asp-page="./ForgotPassword" class="btn btn-link text-center">Zapomniałeś hasła?</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
